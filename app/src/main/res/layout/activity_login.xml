<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <View
        android:id="@+id/view15"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="40dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#009D94EA"
        android:backgroundTint="#9D94EA"
        android:clickable="true"
        android:contentDescription="@string/buttonCancel"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view15"
        app:srcCompat="@drawable/left_arrow"
        app:tint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSignUp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:backgroundTint="#A39D94EA"
        android:gravity="center"
        android:text="新用户"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view15" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="128dp"
        app:cardBackgroundColor="#94FFFFFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutSocialIcons"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFFFF"
            android:orientation="vertical">

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#00FFFFFF"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="left"
                android:hint="请输入用户名"
                android:inputType="textPersonName"
                android:padding="20dp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#00FFFFFF"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="left"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogin"
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:backgroundTint="#9D94EA"
                android:gravity="center"
                android:text="登 录"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="15dp" />

            <TextView
                android:id="@+id/textViewForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/forgetPassword"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewSignInWithOtherWays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="用以下社交帐号登录"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutSocialIcons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutSocialIcons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/qq" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>





